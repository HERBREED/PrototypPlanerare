<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="PrototypPlanerare.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PrototypPlanerare">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!-- Other merged dictionaries here -->
            </ResourceDictionary.MergedDictionaries>

            <!-- Light-blue palette -->
            <SolidColorBrush x:Key="BtnBlueBg"            Color="#EAF3FF"/>
            <SolidColorBrush x:Key="BtnBlueBgHover"       Color="#DDEBFF"/>
            <SolidColorBrush x:Key="BtnBlueBgPressed"     Color="#D1E4FF"/>
            <SolidColorBrush x:Key="BtnBlueBorder"        Color="#A7C6FF"/>
            <SolidColorBrush x:Key="BtnBlueBorderHover"   Color="#8EB6FF"/>
            <SolidColorBrush x:Key="BtnBlueBorderPressed" Color="#78A8FF"/>

            <!-- Light-blue palette (a little darker) -->
            <SolidColorBrush x:Key="BtnBlueBg2"            Color="#D9E9FF"/>
            <SolidColorBrush x:Key="BtnBlueBgHover2"       Color="#CDE2FF"/>
            <SolidColorBrush x:Key="BtnBlueBgPressed2"     Color="#C2DBFF"/>
            <SolidColorBrush x:Key="BtnBlueBorder2"        Color="#8EB6FF"/>
            <SolidColorBrush x:Key="BtnBlueBorderHover2"   Color="#78A8FF"/>
            <SolidColorBrush x:Key="BtnBlueBorderPressed2" Color="#6A9FFF"/>

            <!-- Base flat blue button -->
            <Style x:Key="FlatBlueButton" TargetType="Button">
                <Setter Property="Background"      Value="{StaticResource BtnBlueBg}"/>
                <Setter Property="BorderBrush"     Value="{StaticResource BtnBlueBorder}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Foreground"      Value="{ThemeResource TextFillColorPrimaryBrush}"/>
                <Setter Property="CornerRadius"    Value="8"/>
                <Setter Property="Padding"         Value="12,8"/>
                <Setter Property="FontWeight"      Value="SemiBold"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Border x:Name="Chrome"
                      Background="{TemplateBinding Background}"
                      BorderBrush="{TemplateBinding BorderBrush}"
                      BorderThickness="{TemplateBinding BorderThickness}"
                      CornerRadius="{TemplateBinding CornerRadius}"/>
                                <ContentPresenter Padding="{TemplateBinding Padding}"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup x:Name="CommonStates">
                                        <VisualState x:Name="Normal"/>
                                        <VisualState x:Name="PointerOver">
                                            <VisualState.Setters>
                                                <Setter Target="Chrome.Background"  Value="{StaticResource BtnBlueBgHover}"/>
                                                <Setter Target="Chrome.BorderBrush" Value="{StaticResource BtnBlueBorderHover}"/>
                                            </VisualState.Setters>
                                        </VisualState>
                                        <VisualState x:Name="Pressed">
                                            <VisualState.Setters>
                                                <Setter Target="Chrome.Background"  Value="{StaticResource BtnBlueBgPressed}"/>
                                                <Setter Target="Chrome.BorderBrush" Value="{StaticResource BtnBlueBorderPressed}"/>
                                            </VisualState.Setters>
                                        </VisualState>
                                        <VisualState x:Name="Disabled">
                                            <VisualState.Setters>
                                                <Setter Target="Chrome.Opacity" Value="0.6"/>
                                            </VisualState.Setters>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Base flat blue button -->
            <Style x:Key="FlatBlueButton2" TargetType="Button">
                <Setter Property="Background"      Value="{StaticResource BtnBlueBg2}"/>
                <Setter Property="BorderBrush"     Value="{StaticResource BtnBlueBorder2}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Foreground"      Value="{ThemeResource TextFillColorPrimaryBrush}"/>
                <Setter Property="CornerRadius"    Value="8"/>
                <Setter Property="Padding"         Value="12,8"/>
                <Setter Property="FontWeight"      Value="SemiBold"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Border x:Name="Chrome"
                      Background="{TemplateBinding Background}"
                      BorderBrush="{TemplateBinding BorderBrush}"
                      BorderThickness="{TemplateBinding BorderThickness}"
                      CornerRadius="{TemplateBinding CornerRadius}"/>
                                <ContentPresenter Padding="{TemplateBinding Padding}"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup x:Name="CommonStates">
                                        <VisualState x:Name="Normal"/>
                                        <VisualState x:Name="PointerOver">
                                            <VisualState.Setters>
                                                <Setter Target="Chrome.Background"  Value="{StaticResource BtnBlueBgHover2}"/>
                                                <Setter Target="Chrome.BorderBrush" Value="{StaticResource BtnBlueBorderHover2}"/>
                                            </VisualState.Setters>
                                        </VisualState>
                                        <VisualState x:Name="Pressed">
                                            <VisualState.Setters>
                                                <Setter Target="Chrome.Background"  Value="{StaticResource BtnBlueBgPressed2}"/>
                                                <Setter Target="Chrome.BorderBrush" Value="{StaticResource BtnBlueBorderPressed2}"/>
                                            </VisualState.Setters>
                                        </VisualState>
                                        <VisualState x:Name="Disabled">
                                            <VisualState.Setters>
                                                <Setter Target="Chrome.Opacity" Value="0.6"/>
                                            </VisualState.Setters>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Public keys used in pages -->
            <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource FlatBlueButton}"/>
            <Style x:Key="OutlineButton" TargetType="Button" BasedOn="{StaticResource FlatBlueButton}"/>
            <Style x:Key="PrimaryButton2" TargetType="Button" BasedOn="{StaticResource FlatBlueButton2}"/>

            <!-- Reusable brushes -->
            <SolidColorBrush x:Key="CardBrush" Color="#FFF7F7F7"/>
            <SolidColorBrush x:Key="HeaderBrush" Color="#E6F0FF"/>
            <SolidColorBrush x:Key="DividerBrush" Color="#FFE5E5E5"/>
            <SolidColorBrush x:Key="RowBrush" Color="#FFF0F2F5"/>

            <!-- Other app resources here -->
        </ResourceDictionary>
    </Application.Resources>
</Application>